* Setup environment
*
ti_setup_environment:
       mov  @rndsd,@rnd_seed
       li   one,>0100
       li   r0,>fffe
       mov  r0,@b255
       clr  @frame
       li   sp,stack
       .proc
       bl   @init_bits
       bl   @copy_to_pad
       bl   @graphics_mode
       .endproc
*// ti_setup_environment

*********************************************************************
