* Init bits for bit operations
*
init_bits:
       li   r0,>0100
       li   r1,bits
       li   r2,8
init_bits_1:
       movb r0,*r1+
       sla  r0,1
       dec  r2
       jne  init_bits_1
       rt
*// init_bits

